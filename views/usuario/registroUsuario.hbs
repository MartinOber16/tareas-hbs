{{> head }}
  <!-- Custom styles for this template -->
  <link href="./assets/css/signin.css" rel="stylesheet">

  </head>
  <body class="text-center"> 
    <div class="container">
        <div class="row">
            <div class="col-lg-4"></div>
            <div class="col-lg-4">
                <form>
                    <img class="mb-4" src="./assets/brand/tareas-icono.png" alt="" width="128" height="128">
                    <h1 class="mb-3 fw-normal">Tareas - Registro</h1>
                    <hr>
                    <br>
                    <label for="inputNombreRegistro" class="visually-hidden">Nombre</label>
                    <input type="nombre" id="inputNombreRegistro" class="form-control" placeholder="Nombre" required autofocus>
                    <br>
                    <label for="inputEmailRegistro" class="visually-hidden">Email address</label>
                    <input type="email" id="inputEmailRegistro" class="form-control" placeholder="Email" required>
                    <br>
                    <label for="inputPasswordRegistro" class="visually-hidden">Password</label>
                    <input type="password" id="inputPasswordRegistro" class="form-control" placeholder="Password" required>
                    <br>
                    <hr>
                    <div class="w-100">
                        <button class="btn btn-lg btn-success" id="buttonSubmitRegistro" type="submit"><i class="fa fa-check-circle-o" aria-hidden="true"></i> Registrarse</button>
                        <button class="btn btn-lg btn-secondary" id="buttonCancelRegistro" type="button" onclick="window.location='index'"><i class="fa fa-ban" aria-hidden="true"></i> Cancelar</button>
                    </div>
                    <br>
                    <p class="mt-5 mb-3 text-muted">&copy; Martin Obermeier - {{getAnio}}</p>
                </form>
            </div>
            <div class="col-lg-4"></div>
        </div>
    </div>
    
    <script src="./assets/jquery/jquery-3.5.1.min.js"></script>
    <script src="./assets/js/sweetalert.min.js"></script>

    <script src="./assets/js/cookiesAdmin.js"></script>
    <script src="./assets/js/validarUsuario.js"></script>
    <script src="./assets/js/registroUsuario.js"></script>

  </body>
</html>